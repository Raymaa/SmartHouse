<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aty_main_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#4B4E53">
        <include layout="@layout/toolbar" />
        <android.support.v7.widget.CardView
            android:id="@+id/aty_main_tem"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:background = "@drawable/tem_bck"/>
            <RelativeLayout
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:id="@+id/etv_tem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="23"
                    android:textColor="#fff"
                    android:textSize="60sp" />
                <TextView
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/etv_tem"
                    android:text="°C"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"/>
                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:id="@+id/etv_tem_tim"
                    android:textSize="20sp"
                    android:layout_below="@+id/etv_tem"
                    android:textColor="#fff"
                    android:text="2019-6-2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:src="@drawable/temperature"
                    android:scaleType="centerInside"
                    android:layout_height="100dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/aty_main_wet"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:background = "@drawable/wet_bck"/>
            <RelativeLayout
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:textColor="#fff"
                    android:id="@+id/etv_wet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="23"
                    android:textSize="60sp"/>
                <TextView
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/etv_wet"
                    android:text="%"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"/>

                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:id="@+id/etv_wet_tim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etv_wet"
                    android:padding="10sp"
                    android:text="2019-6-2"
                    android:textColor="#fff"
                    android:textSize="20sp" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:src="@drawable/wet"
                    android:scaleType="centerInside"
                    android:layout_height="100dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/aty_main_smog"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:background = "@drawable/smog_bck"/>
            <RelativeLayout
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:textColor="#fff"
                    android:id="@+id/etv_smog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="23"
                    android:textSize="60sp"/>
                <TextView
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/etv_smog"
                    android:text="%"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"/>
                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:id="@+id/etv_smog_tim"
                    android:padding="10sp"
                    android:textSize="20sp"
                    android:layout_below="@+id/etv_smog"
                    android:textColor="#fff"
                    android:text="2019-6-2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:src="@drawable/smog"
                    android:scaleType="centerInside"
                    android:layout_height="100dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
